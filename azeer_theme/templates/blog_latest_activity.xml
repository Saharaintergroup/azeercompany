<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="blogs_nav" name="Blogs Bar Template Inherit" inherit_id="website_blog.blogs_nav">
		<nav t-attf-class="navbar navbar-expand-sm navbar-light #{additionnal_classes}" position="before">
			<div class="container">
				<div class="act_title">
					<h4>Latest Activities</h4>
				</div>
		    </div>
		</nav>
		<nav t-attf-class="navbar navbar-expand-sm navbar-light #{additionnal_classes}" position="replace"/>
	</template>
	<template id="post_info_inherit" inherit_id="website_blog.post_info">
		<time t-field="blog_post.post_date" position="replace">
			<time t-field="blog_post.post_date" class="text-nowrap font-weight-bold px-2" t-options="{'widget': 'datetime', 'format': 'M-d-yyyy - HH:MM:SS'}"/>
		</time>
	</template>
</odoo>