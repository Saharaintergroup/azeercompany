<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="s_masonry_block_trending_now" name="Trending Now" groups="base.group_user">
            <section>
                <div class="s_masonry_block o_mail_snippet_general" data-vcss="001">
                    <div class="container">
                        <div class="row trending_txt">
                            <h4>Trending now</h4>
                        </div>
                        <div class="row trending_content">
                            <div class="col-lg-6 oe_img_bg overlay_content pb224 pt224" data-name="Block">
                                <img src="/azeer_theme/static/src/images/Group 15213.png" alt=""/>
                                <div class="overlay_text">
                                <h4>Lorem Ipsum</h4>
                                <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                            </div>
                            </div>
                            <div class="col-lg-6 s_col_no_resize o_masonry_grid_container">
                                <div class="row h-100">
                                    <div class="col-lg-6 pt24 pb8 text-center o_cc o_cc2" data-name="Block">
                                        <img src="/azeer_theme/static/src/images/Group 15214.png" alt=""/>
                                    </div>
                                    <div class="col-lg-6 pt24 pb8 text-center o_cc o_cc2" data-name="Block">
                                        <img src="/azeer_theme/static/src/images/Group 15217.png" alt=""/>
                                    </div>
                                    <div class="col-lg-6 pt24 pb8 text-center o_cc o_cc2" data-name="Block">
                                        <img src="/azeer_theme/static/src/images/Group 15215.png" alt=""/>
                                    </div>
                                    <div class="col-lg-6 pt24 pb8 text-center o_cc o_cc2" data-name="Block">
                                        <img src="/azeer_theme/static/src/images/Group 15216.png" alt=""/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </template>
         <template id="s_masonry_block_options_inherit" inherit_id="website.s_masonry_block_options">
            <xpath expr="//we-button[@data-select-template='website.s_masonry_block_default_template']" position="before">
                <we-button title="Azeer Trending Now"
                    data-select-template="azeer_theme.s_masonry_block_trending_now"
                    data-select-data-attribute="trending"
                    data-img="/website/static/src/img/snippets_options/masonry_template_reversed.svg"/>
            </xpath>
        </template>
    </data>
</odoo>
