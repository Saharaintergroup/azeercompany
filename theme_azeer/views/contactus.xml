                            <div class="row"
                            >
                                dfsdf
                            </div>
                        </div>
                    </section>
                    <t t-call="theme_azeer.footerazeer">
                    </t>
                </body>
            </t>
        </template>
        <record id="azeer_contactus_main" model="website.page">
            <field name="name">Contact us</field>
            <field name="website_published">True</field>
            <field name="url">/web/contactus</field>
            <field name="view_id" ref="azeer_contactus_page"/>
        </record>


    </data>
</odoo>