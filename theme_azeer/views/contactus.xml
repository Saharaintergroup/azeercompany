<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="azeer_contactus_page">

            <t t-call="website.layout">
                <body style="background-color:white">
                    <div class="hero_area" style="min-height: 600px;">

                        <div class="hero_bg_box cc" id="img">
                            <img src="../theme_azeer/static/src/images/contactus.png" alt="contactus"/>
                        </div>

                        <!-- header section strats -->
                        <header class="header_section" id="header_section">
                            <div class="container">
                                <t t-call="theme_azeer.navazeer">

                                </t>
                            </div>
                        </header>

                    </div>
                    <section class="department_section layout_padding">
                        <div class="department_container">
                            <div class="container ">


                                <div class="row">
                                    <div class="col-md-7">
                                        <div class="heading_container ">
                                            <h2 style="font-weight: bold;color: #4a4848;line-height: 1.6;">
                                                Leave A Message !
                                            </h2>
                                        </div>
                                        <div class="form_container contact-form">
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <form action="">
                                                        <div class="input-group mb-3">

                                                            <input style="background-color: #F4F3F3;border: none;"
                                                                   type="text" class="form-control"
                                                                   placeholder="Your Name"
                                                                   aria-label="Your Name"
                                                                   aria-describedby="basic-addon1"/>
                                                        </div>
                                                        <div class="input-group mb-3">

                                                            <input style="background-color: #F4F3F3;border: none;"
                                                                   type="text" class="form-control"
                                                                   placeholder="Email Address"
                                                                   aria-label="Email Address"
                                                                   aria-describedby="basic-addon1"/>
                                                        </div>
                                                        <div class="input-group mb-3">

                                                            <input style="background-color: #F4F3F3;border: none;"
                                                                   type="text" class="form-control"
                                                                   placeholder="Phone Number"
                                                                   aria-label="Phone Number"
                                                                   aria-describedby="basic-addon1"/>
                                                        </div>
                                                        <div class="input-group mb-3">
                                                            <textarea
                                                                    style="background-color: #F4F3F3;border: none;color:gray;height: 100px;"
                                                                    class="form-control" placeholder="Your Message">Your
                                                                Message
                                                            </textarea>
                                                        </div>
                                                        <button style="background-color: #048076;width: 120px;border-radius: 25px;border: none;height: 40px;color: white;"
                                                                type="submit">
                                                            Send
                                                        </button>
                                                    </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="heading_container ">
                                            <h2 style="font-weight: bold;color: #4a4848;line-height: 1.6;">
                                                Keep In Touch
                                            </h2>
                                            <div class="row">
                                                <ul>
                                                    <li style="list-style: none;">
                                                        <i style="color: #4a4848;font-size: larger;padding-left: 5px;padding-right: 5px;"
                                                           class="fa fa-phone d-inline-block"></i>
                                                        <p class="d-inline-block"
                                                           style="color: #999898;font-size: small;font-weight: bold;">
                                                            +218 91 218 7949 - 21 477 0643

                                                        </p>
                                                        <br/>
                                                        <i style="color: #4a4848;font-size: larger;padding-left: 5px;padding-right: 5px;"
                                                           class="fa fa-phone d-inline-block"></i>
                                                        <p class="d-inline-block"
                                                           style="color: #999898;font-size: small;font-weight: bold;">

                                                        </p>

                                                        <p class="d-inline-block"
                                                           style="color: #999898;font-size: small;font-weight: bold;">
                                                            +218 +218 21 727 9750 -
                                                        </p>

                                                        <p class="d-inline-block"
                                                           style="color: #999898;font-size: small;font-weight: bold;">
                                                            +917 55 901 7326

                                                        </p>
                                                    </li>
                                                    <li style="list-style: none;">
                                                        <i style="color: #4a4848;font-size: larger;padding-left: 5px;padding-right: 5px;"
                                                           class="fa fa-whatsapp d-inline-block"></i>
                                                        <p class="d-inline-block"
                                                           style="color: #999898;font-size: small;font-weight: bold;">
                                                            +218 91 218 7949
                                                        </p>
                                                    </li>

                                                    <li style="list-style: none;">
                                                        <i style="color: #4a4848;font-size: larger;padding-left: 5px;padding-right: 5px;"
                                                           class="fa fa-envelope d-inline-block"></i>
                                                        <p class="d-inline-block"
                                                           style="color: #999898;font-size: small;font-weight: bold;">
                                                            info@azeergroup.com
                                                        </p>
                                                    </li>
                                                </ul>


                                            </div>


                                        </div>
                                        <div class="row">
                                            <hr style="width: 100%;border-top: 2px solid #f4f3f3;margin-top: 0px;margin-bottom: 0px;"/>
                                            <div style="text-align: center;">

                                                <div class="footer_social">
                                                    <a href="">
                                                        <i style="color: #c1c0c0;font-size: 27px;padding-left: 5px;padding-right: 5px;margin: 14px;"
                                                           class="fa fa-facebook"></i>
                                                    </a>
                                                    <a href="">
                                                        <i style="color: #c1c0c0;font-size: 27px;padding-left: 5px;padding-right: 5px;margin: 14px;"
                                                           class="fa fa-twitter"></i>
                                                    </a>
                                                    <a href="">
                                                        <i style="color: #c1c0c0;font-size: 27px;padding-left: 5px;padding-right: 5px;margin: 14px;"
                                                           class="fa fa-linkedin"></i>
                                                    </a>
                                                    <a href="">
                                                        <i style="color: #c1c0c0;font-size: 27px;padding-left: 5px;padding-right: 5px;margin: 14px;"
                                                           class="fa fa-instagram"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <hr style="width: 100%;border-top: 2px solid #f4f3f3;margin-top: 0px;margin-bottom: 0px;"/>

                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </section>
                    <section class=""
                             style="  margin-bottom: -150px;
margin-top;background-image: url('../theme_azeer/static/src/images/map.png'); background-repeat: no-repeat;background-size: cover;width: 100%;height: 400px;">
