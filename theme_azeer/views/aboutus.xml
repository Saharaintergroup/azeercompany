<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="azeer_aboutus_page">

            <t t-call="website.layout">
                <body>
                    <div class="hero_area" style="min-height: 600px;">

                        <div class="hero_bg_box cc" id="img">
                            <img src="../theme_azeer/static/src/images/aboutus.png" alt="aboutus"/>
                        </div>

                        <!-- header section strats -->
                        <header class="header_section" id="header_section">
                            <div class="container">
                                <t t-call="theme_azeer.navazeer">

                                </t>
                            </div>
                        </header>

                    </div>
                    <section class="department_section layout_padding">
                        <div class="department_container">
                            <div class="container ">
                                <div class="heading_container ">
                                    <h2 style="font-weight: bold;color: #4a4848;line-height: 1.6;">
                                        Our Story
                                    </h2>
                                </div>
                                <div class="heading_container ">
                                    <h4 style="font-weight: bold;color: #4a4848;line-height: 1.6;">
                                        What started out as a young ambitious company in 2011, is now transformed into
                                        Alazeer holding group. in
                                        2020, our group was officially established as a libyan importing company located
                                        in Tripoli.
                                        specializing in healthcare innovation and medical equipment, we trade across the
                                        country.
                                        we are parenting a group of smaller leading firms that work as a one family,
                                        providing a wide range of
                                        medical solutions and value-added services to public healthcare sectors,
                                        privates and end-users alike.all of
                                        our companies share the same goal of building a successful and a long-lasting
                                        relationship with our
                                        customers.
                                    </h4>

                                </div>
                                <br/>
                                <br/>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="img-box">
                                            <img style="border-radius: 0px; border: medium none;width: 100%;"
                                                 src="../theme_azeer/static/src/images/ceo.png"
                                                 alt=""/>
                                        </div>
                                        <div class="footer_social" style="text-align: center;">
                                            <a href="">
                                                <i style="color: gray;font-size: small;padding-left: 5px;padding-right: 5px;display: inline-block;border-radius: 60px;box-shadow: 0 0 2px #888;padding: 0.4em 0.5em;"
                                                   class="fa fa-facebook"></i>
                                            </a>
                                            <a href="">
                                                <i style="color: gray;font-size: small;padding-left: 5px;padding-right: 5px;display: inline-block;border-radius: 60px;box-shadow: 0 0 2px #888;padding: 0.4em 0.5em;"
                                                   class="fa fa-twitter"></i>
                                            </a>
                                            <a href="">
                                                <i style="color: gray;font-size: small;padding-left: 5px;padding-right: 5px;display: inline-block;border-radius: 60px;box-shadow: 0 0 2px #888;padding: 0.4em 0.5em;"
                                                   class="fa fa-linkedin"></i>
                                            </a>
                                            <a href="">
                                                <i style="color: gray;font-size: small;padding-left: 5px;padding-right: 5px;display: inline-block;border-radius: 60px;box-shadow: 0 0 2px #888;padding: 0.4em 0.5em;"
                                                   class="fa fa-instagram"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="heading_container ">
                                            <h3 style="font-weight: bold;color: #4a4848;line-height: 1.6;text-decoration: underline;">
                                                Kais Duzan
                                            </h3>

                                            <p>CEO and FOUNDER</p>
                                            <p style="line-height: 42px;font-size: 17px;">
                                                Kais Duzan is a prominent leader in the healthcare industry with
                                                over 10 years of experience in healthcare management, business,
                                                and marketing .
                                                Mr. Duzan founded AlAzeer group in 2011 striving to contribute to
                                                the transformation of the healthcare industry in Libya and the
                                                dynamic medical sector. Prior to the establishment of AlAzeer, Mr.
                                                Duzan worked as a specialized Roche marketing agent for a
                                                renowned company for seven years. During his work at the Saqar-
                                                AlAkhdar, he was able to successfully develop and implement new
                                                and effective methods for promoting products, services and lead
                                                projects that have achieved significant returns and income .
                                            </p>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </section>
                    <section class="">

                        <div class="container">
                            <div class="heading_container ">
                                    <h2 style="font-weight: bold;color: #4a4848;line-height: 1.6;">
                                      Alazeer Gallery
                                    </h2>
                                </div>
                            <div class="row">
                                <div class="col-md-12" >

                                    <div class="row">
                                        <section class="client_section " style="width: 100%;">
                                            <div class="container" >

                                                <div id="carouselExample2Controls" class="carousel slide"
                                                     data-ride="carousel">
                                                    <div class="carousel-inner">
                                                        <div class="carousel-item active">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="box">
                                                                        <div class="">
                                                                            <img style="border-radius: 0px; border: medium none;width: 100%;"
                                                                                 src="../theme_azeer/static/src/images/azeergallary.png"
                                                                                 alt=""/>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="carousel-item ">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="box">
                                                                        <div class="">
                                                                            <img style="border-radius: 0px; border: medium none;width: 100%;"
                                                                                 src="../theme_azeer/static/src/images/azeergallary.png"
                                                                                 alt=""/>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="carousel-item ">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="box">
                                                                        <div class="">
                                                                            <img style="border-radius: 0px; border: medium none;width: 100%;"
                                                                                 src="../theme_azeer/static/src/images/azeergallary.png"
                                                                                 alt=""/>
                                                                        </div>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="carousel_btn-container">
                                                        <a class="carousel-control-prev"
                                                           href="#carouselExample2Controls" role="button"
                                                           data-slide="prev">
                                                            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                                                            <span class="sr-only">Previous</span>
                                                        </a>
                                                        <a class="carousel-control-prev"
                                                           href="#carouselExample2Controls" role="button"
                                                           data-slide="prev">
                                                            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                                                            <span class="sr-only">Previous</span>
                                                        </a>
                                                        <a class="carousel-control-next"
                                                           href="#carouselExample2Controls" role="button"
                                                           data-slide="next">
                                                            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                                                            <span class="sr-only">Next</span>
                                                        </a>
                                                        <a class="carousel-control-next"
                                                           href="#carouselExample2Controls" role="button"
                                                           data-slide="next">
                                                            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                                                            <span class="sr-only">Next</span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </section>
                    <t t-call="theme_azeer.footerazeer">
                    </t>
                </body>
            </t>
        </template>
        <record id="azeer_aboutus_main" model="website.page">
            <field name="name">About us</field>
            <field name="website_published">True</field>
            <field name="url">/web/aboutus</field>
            <field name="view_id" ref="azeer_aboutus_page"/>
        </record>


    </data>
</odoo>