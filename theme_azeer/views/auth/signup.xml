<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="signup_page" name="Sign Up">

            <t t-call="website.layout">
                <body>
                    <div class="back">


                        <div class="div-center" style="margin-top: 66px;">


                            <div class="content">
                                <div style="text-align: center;">
                                    <img src="../theme_azeer/static/src/images/loginlogo.png" alt="logo azeer"
                                         style="width: 18%;height: 50%;"/>
                                </div>

                                <h2 style="text-align: center;">Sign Up</h2>

                                <p style="text-align: center;color: #666363;">Create New Account !</p>
                                <hr/>
                                <form t-attf-action="" method="post"
                                      onsubmit="">

                                    <div class="form-group" style="margin-bottom: 0px;">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="text"
                                               style="border: none;background-color: #EDEDED;border-radius: 5px;"
                                               placeholder="Email or Phone Number" name="login" t-att-value="login"
                                               id="login"
                                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                               required="required" autofocus="autofocus" autocapitalize="off"/>
                                    </div>
                                    <div class="form-group" style="margin-bottom: 0px;">
                                        <label for="exampleInputEmail1">Name</label>
                                        <input type="text"
                                               style="border: none;background-color: #EDEDED;border-radius: 5px;"
                                               placeholder="Your Name" name="name" t-att-value="name" id="login"
                                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                               required="required" autofocus="autofocus" autocapitalize="off"/>
                                    </div>
                                    <div class="form-group" style="margin-bottom: 0px;">
                                        <label for="exampleInputPassword1">Password</label>
                                        <input type="password"
                                               style="border: none;background-color: #EDEDED;border-radius: 5px;"
                                               placeholder="Password" name="password" id="password"
                                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                               required="required" autocomplete="current-password"
                                               t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                    </div>
                                    <div class="form-group" style="margin-bottom: 0px;">
                                        <label for="exampleInputPassword1">Confirm Password</label>
                                        <input type="password"
                                               style="border: none;background-color: #EDEDED;border-radius: 5px;"
                                               placeholder="Confirm password" name="confirmpassword"
                                               id="confirmpassword"
                                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                               required="required" autocomplete="current-password"
                                               t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                    </div>

                                    <div style="text-align: center;">
                                        <button style="background-color: #069a8e;border-color: #069a8e;width: 133px;"
                                                type="submit" class="btn btn-primary">Sign Up
                                        </button>
                                    </div>
                                    <div style="text-align: center;">
                                        <span style="font-size: 0.75em;color: #5b5a5a;">Do you Have An Account?
                                            <a style="color: #069a8e;font-weight: bold;" href="/web/login">Login</a>
                                        </span>
                                    </div>


                                    <hr/>


                                </form>

                            </div>


                        </div>
                    </div>
                </body>
            </t>
        </template>
        <record id="signup" model="website.page">
            <field name="name">Sign up</field>
            <field name="website_published">True</field>
            <field name="url">/web/signup</field>
            <field name="view_id" ref="signup_page"/>
        </record>


    </data>
</odoo>