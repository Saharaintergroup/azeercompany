<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <template id="reset_password" inherit_id="auth_signup.reset_password" name="OAuth Reset Password buttons">


          <xpath expr="//form" position="replace">
                <body>
                    <div class="back">


                        <div class="div-center" style="margin-top: 66px;">


                            <div class="content">
                                <div style="text-align: center;">
                                    <img src="../theme_azeer/static/src/images/loginlogo.png" alt="logo azeer"
                                         style="width: 18%;height: 50%;"/>
                                </div>

                                <h2 style="text-align: center;">Reset Password</h2>

                                <p style="text-align: center;color: #666363;">Please Enter you Email To Reset it !!</p>
                                <hr/>
                                <form t-attf-action="" method="post"
                                      onsubmit="">

                                    <div class="form-group" style="margin-bottom: 0px;">
                                        <label for="exampleInputEmail1">Email address</label>
                                        <input type="text"
                                               style="border: none;background-color: #EDEDED;border-radius: 5px;"
                                               placeholder="Email or Phone Number" name="login" t-att-value="login"
                                               id="login"
                                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                               required="required" autofocus="autofocus" autocapitalize="off"/>
                                    </div>


                                    <div style="text-align: center;">
                                        <button style="background-color: #069a8e;border-color: #069a8e;width: 133px;margin-top: 40px;"
                                                type="submit" class="btn btn-primary">Continue
                                        </button>
                                    </div>
                                    <div style="text-align: center;">
                                        <span style="font-size: 0.75em;color: #5b5a5a;">Go Back To
                                            <a style="color: #069a8e;font-weight: bold;" href="/web/signup">Sign Up</a>
                                        </span>
                                    </div>


                                    <hr/>


                                </form>

                            </div>


                        </div>
                    </div>
                </body>


        </xpath>
    </template>


</odoo>