<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="azeer_login" inherit_id="website.login_layout" name="azeer login"
              active="True">

        <xpath expr="//div[hasclass('oe_website_login_container')]" position="replace">
            <div class="row">
                <div>
                    <form style="max-width: 50%;font-family: 'Cairo', sans-serif;" class="oe_login_form" role="form"
                          t-attf-action="/web/login" method="post"
                          onsubmit="this.action = '/web/login' + location.hash">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                            <label for="db" class="col-form-label">Database</label>
                            <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                <input type="text" name="db" t-att-value="request.db" id="db"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                       required="required" readonly="readonly"/>
                                <span class="input-group-append">
                                    <a role="button" href="/web/database/selector" class="btn btn-secondary">Select
                                        <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i>
                                    </a>
                                </span>
                            </div>
                        </div>
                        <div style="margin-bottom:3%;margin-top:10%">
                            <label for="Login" style="font-size: initial;">تسجيل الدخول</label>

                        </div>
                        <div class="form-group field-login">
                            <!--                    <label for="login">Email</label>-->
                            <div class="form-with-icon">
                                <input type="text" style="font-size: initial;height:calc(2.5em + 0.75rem + 2px)"
                                       placeholder="Email" name="login" t-att-value="login" id="login"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                       required="required" autofocus="autofocus" autocapitalize="off"/>
                                <i style="font-size: 0.75em;" class="fa fa-circle  item-icon item-icon-right"/>

                            </div>
                        </div>


                        <div class="form-group field-password">
                            <!--                    <label for="password">Password</label>-->
                            <div class="form-with-icon">

                                <input type="password" style="font-size: initial;height:calc(2.5em + 0.75rem + 2px)"
                                       placeholder="Password" name="password" id="password"
                                       t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                       required="required" autocomplete="current-password"
                                       t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                <i style="font-size: 0.75em;" class="fa fa-eye-slash  item-icon item-icon-right"/>

                            </div>

                        </div>

                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error"/>
                        </p>
                        <p class="alert alert-success" t-if="message" role="status">
                            <t t-esc="message"/>
                        </p>
                        <div class="row">
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-1">
                                        <input type="checkbox" id="chk-3"/>
                                    </div>
                                    <div class="col-md-4" style="padding-right: 0px;">
                                        <label style="font-size: 1.4rem;" for="Rememberme">تذكرني</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <a href="/web/reset_password" style="color:red;font-size: 1.4rem;">هل نسيت كلمة المرور
                                </a>
                                <!--                    <a href="/web/reset_password/" class="btn btn-link" role="button">Forgot password?</a>-->
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-8">
                                <div class="form-group mt20">
                                    <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                                        <button style="background-color: #307DA3;font-size: initial;height:calc(2.5em + 0.75rem + 2px)"
                                                type="submit" class="btn btn-primary btn-block buttond">Log in
                                        </button>
                                        <t t-if="debug">
                                            <button type="submit" name="redirect" value="/web/become"
                                                    class="btn btn-link btn-sm btn-block">Log in as superuser
                                            </button>
                                        </t>
                                        <div class="o_login_auth"/>
                                    </div>

                                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                                </div>
                            </div>
                            <div class="col-md-2">
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-2">
                            </div>

                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-1">
                                    </div>

                                    <div class="col-md-5">
                                        <div class="row">
                                            <div style="padding-right: 0px;padding-left: 0px;color: #645e5e;"
                                                 class="paddingdoa col-md-6">
                                                <label style="font-size: 1rem;" for="youdonothaveaccount">ليس لديك
                                                    حساب؟
                                                </label>


                                            </div>
                                            <div style="padding-right: 0px;padding-left: 0px;" class="mpc col-md-6">
                                                <a href="/web/register" class="btn btn-link" role="button"
                                                   style="font-size: 1rem;color: black;font-family: 'Cairo', sans-serif;padding-top: 0px;"
                                                   for="createaccount">إنشاء حساب
                                                </a>

                                            </div>

                                        </div>

                                    </div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div style="padding-right: 0px;padding-left: 0px;color: #645e5e;"
                                                 class="paddingdoa col-md-8">
                                                <label style="font-size: 1rem;" for="accountnotactivated">لم يتم تفعيل
                                                    الحساب
                                                    ؟
                                                </label>


                                            </div>
                                            <div style="padding-right: 0px;padding-left: 0px;" class="mpc col-md-4">
                                                <a href="#" style="font-size: 1rem;color: black;" for="presshere">اضغط
                                                    هنا
                                                </a>

                                            </div>

                                        </div>

                                    </div>
                                    <div class="col-md-1">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                            </div>


                        </div>
                    </form>

                </div>
            </div>


        </xpath>
    </template>


</odoo>