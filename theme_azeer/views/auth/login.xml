<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="azeer_login" inherit_id="auth_signup.login" name="azeer Login">
        <xpath expr="//form" position="replace">
            <body>
                <div class="back" style="font-family: 'Nexa', sans-serif;">


                    <div class="div-center" style="margin-top: 66px;">


                        <div class="content">
                            <div style="text-align: center;">
                                <img src="../theme_azeer/static/src/images/loginlogo.png" alt="logo azeer"
                                     style="width: 18%;height: 50%;"/>
                            </div>

                            <h2 style="text-align: center;">Log In</h2>

                            <p style="text-align: center;color: #666363;">Please Login To Continue !</p>
                            <hr/>
                            <form t-attf-action="/web/login" method="post"
                                  onsubmit="this.action = '/web/login' + location.hash">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                                    <label for="db" class="col-form-label">Database</label>
                                    <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                        <input type="text" name="db" t-att-value="request.db" id="db"
                                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                               required="required" readonly="readonly"/>
                                        <span class="input-group-append">
                                            <a role="button" href="/web/database/selector" class="btn btn-secondary">
                                                Select
                                                <i class="fa fa-database" role="img" aria-label="Database"
                                                   title="Database"></i>
                                            </a>
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="text"
                                           style="border: none;background-color: #EDEDED;border-radius: 5px;"
                                           placeholder="Email or Phone Number" name="login" t-att-value="login"
                                           id="login"
                                           t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                           required="required" autofocus="autofocus" autocapitalize="off"/>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="password"
                                           style="border: none;background-color: #EDEDED;border-radius: 5px;"
                                           placeholder="Password" name="password" id="password"
                                           t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                           required="required" autocomplete="current-password"
                                           t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                                </div>
                                <div class="forge">
                                    <a style="color: red;font-size: 0.65em;" href="/web/reset_password/">Forget
                                        Password
                                    </a>
                                </div>
                                <p class="alert alert-danger" t-if="error" role="alert">
                                    <t t-esc="error"/>
                                </p>
                                <p class="alert alert-success" t-if="message" role="status">
                                    <t t-esc="message"/>
                                </p>
                                <div style="text-align: center;">
                                    <button style="background-color: #069a8e;border-color: #069a8e;width: 133px;"
                                            type="submit" class="btn btn-primary">Login
                                    </button>
                                </div>
                                <div style="text-align: center;">
                                    <span style="font-size: 0.75em;color: #5b5a5a;">Donâ€™t Have An Account?
                                        <a style="color: #069a8e;font-weight: bold;" href="/web/signup">Sign Up</a>
                                    </span>
                                </div>

                                <t t-if="debug">
                                    <button type="submit" name="redirect" value="/web/become"
                                            class="btn btn-link btn-sm btn-block">Log in as superuser
                                    </button>
                                </t>
                                <hr/>

                            </form>

                        </div>


                    </div>
                </div>
            </body>
        </xpath>
    </template>


</odoo>